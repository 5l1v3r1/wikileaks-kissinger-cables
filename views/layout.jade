doctype 5
html
  head
    if typeof title !== "undefined"
        title=title

    block stylesheets
    link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Rambla:400,700')
    link(rel='stylesheet', href='/stylesheets/style.css')    

  body

    #workspace

        .sharespace
            a(href="https://twitter.com/share").twitter-share-button Tweet
            .fb-like(data-send="false",data-layout="button_count",data-width="100",data-show-faces="false")

        .sharespace.embed
            input.input-block-level(type="text", value=getEmbed() )
            
        ul.nav.nav-pills
            li(class=req.path == "/play" ? "active" : "")
                a(href="/play") Play the history         
            li(class=req.path == "/dive" ? "active" : "")
                a(href="/dive") Dive into the archive        
    
        .tab-content
            .tab-pane.active
                block content

    script(src="/javascripts/vendor/modernizr.custom.js", type="text/javascript")
    script(src="/javascripts/vendor/jquery-1.7.1.min.js", type="text/javascript")
    script(src="/javascripts/vendor/bootstrap.min.js", type="text/javascript")
    script(src="/javascripts/global.js", type="text/javascript")
    block scripts
    
    div#fb-root

    script
        (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/fr_FR/all.js#xfbml=1&appId=395074383915209";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

    script 
        !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");

        